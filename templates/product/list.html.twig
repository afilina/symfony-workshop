{% extends 'base.html.twig' %}

{% block title %}Products{% endblock %}

 {% block body %}
     <div id="products" class="card-columns">
     {% for item in items %}
         <div class="product card" style="min-width: 10rem;">
             <div class="card-body">
                 <h5 class="card-title">
                     <a href="{{ path('view_product', {code: item.code}) }}">
                        {{ item.name }}
                     </a>
                 </h5>
                 <p class="card-text">{{ (item.price / 100) | number_format(2) }}</p>
             </div>
             <div class="card-footer">
                 <a class="btn btn-primary" href="{{ path('update_product', {code: item.code}) }}">Edit</a>
             </div>
         </div>
         {% endfor %}
     </div>
 {% endblock %}
