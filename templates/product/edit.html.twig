{% extends 'base.html.twig' %}

{% block javascripts %}
<script
    src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
    integrity="sha256-pasqAKBDmFT4eHoN2ndd6lN370kFiGUFyTiUHWhU7k8="
    crossorigin="anonymous"></script>
<script>
  $('#update_product_cover').on('change',function(){
    let fileName = $(this).val();
    let cleanFileName = fileName.replace('C:\\fakepath\\', " ");
    $(this).next('.custom-file-label').html(cleanFileName);
  })
</script>
{% endblock %}

{% block title %}
    {% trans %}Edit Product{% endtrans %}
{% endblock %}

{% block body %}
    {{ form_errors(form) }}
    {{ form_start(form) }}

    {{ form_row(form.name) }}
    {{ form_row(form.price) }}
    {{ form_row(form.cover) }}

    <img src="{{ form.vars.value.coverUrl }}" alt="" style="object-fit: cover; height: 12rem; margin-bottom: 1rem;">

    {{ form_row(form.submit) }}

    {{ form_end(form) }}
{% endblock %}
